{
  "name": "cron-ironer",
  "version": "1.1.0",
  "description": "CLI to parse cron schedules, render heatmaps, and suggest evenly distributed alternatives",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brendtumi/cron-ironer.git"
  },
  "author": "Tümay Çeber <tumayceber@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brendtumi/cron-ironer/issues"
  },
  "homepage": "https://github.com/brendtumi/cron-ironer#readme",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "cron-ironer": "bin/cron-ironer"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "npm run format && eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run --coverage",
    "prepare": "npm run build",
    "dev": "ts-node src/cli.ts",
    "generate:test-resources": "node scripts/generate-test-resources.js",
    "preversion": "npm run test && npm run lint"
  },
  "keywords": [
    "cron",
    "heatmap",
    "optimizer"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/jpeg-js": "^0.3.7",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.80",
    "commander": "^14.0.1",
    "cron-parser": "^5.4.0",
    "jpeg-js": "^0.4.4",
    "yaml": "^2.8.1"
  }
